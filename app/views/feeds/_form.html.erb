<%= form_with(model: feed, local: true, url: choose_new_or_edit ) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post-field">
    <%= form.label :image %>
    <% if @feed.image? %>
      <div class="post-image">
        <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      </div>
      <div>
        <% if action_name == 'edit' %>
          <%= form.submit "画像削除", name: "delete_image", data: { confirm: "画像を削除しますか？" } %>
        <% else %>
          <%= form.submit "画像削除", name: "delete_image" %>
        <% end %>
      </div>
    <% end %>

    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="post-content">
     <%= form.label :content %>
     <%= form.text_field :content %>
  </div>

  <div class="post-actions">
    <% if action_name == 'edit' %>
      <%= form.submit "更新する" %>
    <% else %>
      <%= form.submit "確認画面" %>
    <% end %>
  </div>
<% end %>
