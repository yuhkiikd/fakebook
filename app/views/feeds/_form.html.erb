<%= form_with(model: feed, local: true, url: choose_new_or_edit ) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <% if @feed.image? %>
      <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      <% if action_name == 'new' || action_name == 'confirm' || action_name == 'create' %>
        <%= form.submit "画像削除", name: "delete_image" %>
      <% else %>
        <%= form.submit "画像削除", name: "delete_image", data: { confirm: "画像を削除しますか？" } %>
      <% end %>
    <% end %>

    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="fakebook_content">
     <%= form.label :content %>
     <%= form.text_field :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
